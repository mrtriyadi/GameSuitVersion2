<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    app:layout_constraintWidth_percent="0.75"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="20sp"
        android:layout_margin="10dp"
        android:text="Hasil Permainan"
        android:textAlignment="center"
        />

    <TextView
        android:id="@+id/tv_pemenang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="................"
        android:textSize="30sp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintLeft_toLeftOf="@id/tv_title"
        app:layout_constraintRight_toRightOf="@id/tv_title"
        android:layout_marginTop="40dp"/>
    <TextView
        android:id="@+id/tv_menang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MENANG"
        android:textSize="30sp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/tv_pemenang"
        app:layout_constraintLeft_toLeftOf="@id/tv_pemenang"
        app:layout_constraintRight_toRightOf="@id/tv_pemenang"/>

    <Button
        android:id="@+id/btn_main_lagi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_menang"
        app:layout_constraintLeft_toLeftOf="@id/tv_menang"
        app:layout_constraintRight_toRightOf="@id/tv_menang"
        android:layout_marginTop="30dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:text="Main Lagi"
        android:textSize="20sp"
        />

    <Button
        android:id="@+id/btn_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btn_main_lagi"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:text="Kembali ke Menu"
        android:textSize="20sp"/>



</androidx.constraintlayout.widget.ConstraintLayout>