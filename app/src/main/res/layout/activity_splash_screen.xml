<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.SplashScreen">
    
    <ImageView
        android:id="@+id/iv_batu"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/batu"
        android:layout_marginTop="100dp"/>

    <ImageView
        android:id="@+id/iv_kertas"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="@id/iv_batu"
        app:layout_constraintLeft_toLeftOf="@id/iv_batu"
        app:layout_constraintRight_toRightOf="@id/iv_batu"
        android:src="@drawable/kertas"
        android:layout_marginTop="75dp"
        android:layout_marginRight="100dp"/>

    <ImageView
        android:id="@+id/iv_gunting"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="@id/iv_batu"
        app:layout_constraintLeft_toLeftOf="@id/iv_batu"
        app:layout_constraintRight_toRightOf="@id/iv_batu"
        android:src="@drawable/gunting"
        android:layout_marginTop="75dp"
        android:layout_marginLeft="100dp"/>

    <ImageView
        android:id="@+id/iv_intro"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintBottom_toTopOf="@id/iv_batu"
        app:layout_constraintLeft_toLeftOf="@id/iv_batu"
        app:layout_constraintRight_toRightOf="@id/iv_batu"/>

</androidx.constraintlayout.widget.ConstraintLayout>