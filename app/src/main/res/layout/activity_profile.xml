<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.profile.ProfileActivity">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/profileImg"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="20dp"
        android:src="@drawable/gunting"
        android:layout_marginEnd="20dp"/>

    <EditText
        android:id="@+id/username"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toBottomOf="@id/profileImg"
        app:layout_constraintLeft_toLeftOf="@id/profileImg"
        app:layout_constraintRight_toRightOf="@id/profileImg"
        android:background="@drawable/custom_bg"
        android:gravity="center_vertical|center"
        android:textSize="24sp"
        android:text="Username"/>
    <EditText
        android:id="@+id/email"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/username"
        app:layout_constraintLeft_toLeftOf="@id/profileImg"
        app:layout_constraintRight_toRightOf="@id/profileImg"
        android:background="@drawable/custom_bg"
        android:gravity="center_vertical|center"
        android:textSize="24sp"
        android:text="Email"/>
    <Button
        android:id="@+id/photoPicker"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/white"
        app:layout_constraintTop_toBottomOf="@id/email"
        app:layout_constraintLeft_toLeftOf="@id/profileImg"
        app:layout_constraintRight_toRightOf="@id/profileImg"
        android:textColor="@color/black"
        android:background="@drawable/custom_bg"
        android:gravity="center_vertical|center"
        android:textSize="24sp"
        android:text="Choose Image"/>


    <Button
        android:id="@+id/btnSaveProfile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="SAVE PROFILE"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/custom_bg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/photoPicker"   />

</androidx.constraintlayout.widget.ConstraintLayout>